<?xml version="1.0"?>
<!-- Copy three times in combination with process-self, process-children -->
<stx:transform xmlns:stx="http://stx.sourceforge.net/2002/ns" version="1.0">

  <stx:template match="*/node()">
    <stx:copy />
    <stx:process-self />
    <stx:copy />
  </stx:template>

  <stx:template match="node()">
    <stx:copy>
      <stx:process-children />
    </stx:copy>
  </stx:template>
  
</stx:transform>
