<?xml version="1.0" encoding="utf-8"?>
<!-- keep-value for a local variable -->
<stx:transform xmlns:stx="http://stx.sourceforge.net/2002/ns" version="1.0">

  <stx:variable name="a" keep-value="no" />
  
  <stx:template match="node()">
    <stx:variable name="b" keep-value="yes" />
  </stx:template>

</stx:transform>